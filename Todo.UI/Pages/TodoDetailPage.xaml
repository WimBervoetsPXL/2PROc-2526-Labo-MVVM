<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Todo.UI.ViewModels"
             x:Class="Todo.UI.Pages.TodoDetailPage"
             Title="TodoDetailPage"
             x:DataType="vm:TodoDetailViewModel">
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Titel" />
        <Entry Text="{Binding Title}"/>
        <Label Text="Omschrijving"/>
        <Entry Text="{Binding Description}"/>
        <Label Text="Voltooid" />
        <CheckBox IsChecked="{Binding IsCompleted}"/>
        <Label Text="Deadline"/>
        <DatePicker Date="{Binding DueDate}"/>
        <Button Text="Toevoegen" Command="{Binding AddTodoCommand}"/>
    </VerticalStackLayout>
</ContentPage>
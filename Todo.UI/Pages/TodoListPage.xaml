<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="Todo.UI.Pages.TodoListPage"
             Title="TodoListPage"
             Shell.NavBarIsVisible="False"
             xmlns:vm="clr-namespace:Todo.UI.ViewModels"
             xmlns:m="clr-namespace:Todo.UI.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:c="clr-namespace:Todo.UI.Converters"
             x:DataType="vm:TodoListViewModel"
             x:Name="TodoOverview">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior 
            EventName="Appearing"
            BindingContext="{Binding Path=BindingContext, Source={x:Reference TodoOverview}}"
            Command="{Binding LoadDataCommand}"/>
    </ContentPage.Behaviors>
    
    <ContentPage.Resources>
        <c:CompletedTextDecorationConverter x:Key="CompletedTextDecorationConverter"/>
        <Style x:Key="InvalidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="LightCoral" />
        </Style>
        <Style x:Key="ValidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="{StaticResource Primary}" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="5">

        <!-- Title -->
        <Label Text="C# Mobile Todo List" 
               FontSize="Title"
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               Margin="0,0,0,20" />


        <Grid>
            <!--<Entry x:Name="NewToDoEntry"
                   Placeholder="Enter a new to-do..."
                   Text="{Binding NewTodoTitle}">
                <Entry.Behaviors>
                    <toolkit:TextValidationBehavior 
                        InvalidStyle="{StaticResource InvalidEntryStyle}"
                        ValidStyle="{StaticResource ValidEntryStyle}"
                        Flags="ValidateOnValueChanged"
                        MinimumLength="10" />
                </Entry.Behaviors>
            </Entry>-->

            <!-- List of To-Dos -->
            <CollectionView ItemsSource="{Binding TodoItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="m:TodoItem">

                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem mi:MauiIcon.Value="{mi:FluentFilled Icon=Delete32Filled, IconSize=Large, IconColor={StaticResource Primary}}"
                                    BackgroundColor="LightCoral"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TodoListViewModel}},Path=DeleteTodoCommand}"
                                    CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <Grid ColumnDefinitions="Auto,*">
                                <CheckBox IsChecked="{Binding IsCompleted}" />
                                <Label Grid.Column="1" 
                            Text="{Binding Title}" 
                            VerticalOptions="Center"
                            Margin="10,0,0,0" 
                            TextDecorations="{Binding IsCompleted, 
                                Converter={StaticResource CompletedTextDecorationConverter}}"/>
                            </Grid>

                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button CornerRadius="45" Padding="0" Text="+" 
                    Command="{Binding AddTodoCommand}" VerticalOptions="End" HorizontalOptions="End"/>
        </Grid>


    </VerticalStackLayout>
</ContentPage>